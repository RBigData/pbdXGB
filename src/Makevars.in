# package root
PKGROOT=.
ENABLE_STD_THREAD=0
# _*_ mode: Makefile; _*_

CXX_STD = CXX11

XGB_RFLAGS = -DXGBOOST_STRICT_R_MODE=1 -DDMLC_LOG_BEFORE_THROW=0\
           -DDMLC_ENABLE_STD_THREAD=$(ENABLE_STD_THREAD) -DDMLC_DISABLE_STDIN=1\
           -DDMLC_LOG_CUSTOMIZE=1 -DXGBOOST_CUSTOMIZE_LOGGER=1\
           -DRABIT_CUSTOMIZE_MSG_ -DRABIT_STRICT_CXX98_\
           -D@PBDR_MPICXX@

# disable the use of thread_local for 32 bit windows:
#ifeq ($(R_OSTYPE)$(WIN),windows)
#    XGB_RFLAGS += -DDMLC_CXX11_THREAD_LOCAL=0
#endif
#$(foreach v, $(XGB_RFLAGS), $(warning $(v)))

### MPI related
MPI_CPPFLAGS = @MPI_CPPFLAGS@
MPI_LDFLAGS = @MPI_LDFLAGS@
RABIT_ENGINE = @RABIT_ENGINE@.o

PKG_CPPFLAGS=  -I$(PKGROOT)/include -I$(PKGROOT)/dmlc-core/include -I$(PKGROOT)/rabit/include -I$(PKGROOT) $(XGB_RFLAGS) $(MPI_CPPFLAGS)
PKG_CXXFLAGS= @OPENMP_CXXFLAGS@ -pthread
PKG_LIBS = @OPENMP_CXXFLAGS@ -pthread $(MPI_LDFLAGS)
OBJECTS= ./xgboost_R.o ./xgboost_custom.o ./xgboost_assert.o ./xgboost_rabit.o ./init.o\
         $(PKGROOT)/amalgamation/xgboost-all0.o $(PKGROOT)/amalgamation/dmlc-minimum0.o\
         $(PKGROOT)/rabit/src/$(RABIT_ENGINE) $(PKGROOT)/rabit/src/c_api.o

